.buttons-container
  = link_to "mailto:?subject=Propiedad Recomendada - #{SITE_CONFIG['site_name']}&body=Link de la Propiedad: #{request.original_url}" do
    %button.primary.empty{ class: "style-#{SITE_CONFIG['buttons_style']}" }
      %i.icon-mail
      .name Enviar propiedad
  = link_to "https://www.facebook.com/sharer/sharer.php?u=#{request.original_url}", target: '_blank' do
    %button.primary.empty{ class: "style-#{SITE_CONFIG['buttons_style']}" }
      %i.icon-facebook
  = link_to "https://twitter.com/home?status=#{request.original_url}", target: '_blank' do
    %button.primary.empty{ class: "style-#{SITE_CONFIG['buttons_style']}" }
      %i.icon-twitter
