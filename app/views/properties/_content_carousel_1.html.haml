/ Product Carousel
%section.product-carousel-outer
  / Product image Carousel
  .buttons-container.desktop.button-toggles
    %button.primary.big.show-location{ class: "style-#{SITE_CONFIG['buttons_style']}" }
      = fa_icon 'map-marker'
      Ver ubicación
    - if SITE_CONFIG['display_street_view']
      %button.primary.big.show-3d{ class: "style-#{SITE_CONFIG['buttons_style']}" }
        = fa_icon 'map-marker'
        Ver calle 3D
    %button.primary.big.show-images.hidden{ class: "style-#{SITE_CONFIG['buttons_style']}" }
      = fa_icon 'camera'
      Ver fotos

  %ul.prod-image-carousel.owl-theme.owl-carousel
    - @property['imagenes'].each do |image|
      %li
        %figure.image
          %a{ href: "#{image['img']}", class: 'lightbox-image option-btn', 'data-fancybox-group': "example-gallery" }
            %img{ alt: "", src: image['img'] }/

  / Product Thumbs Carousel
  .prod-thumbs-carousel.owl-theme.owl-carousel
    - @property['imagenes'].each do |image|
      .thumb-item
        %figure.thumb-box
          %img{ alt: "", src: image['th'] || image['img'] }/

  #property-map{ 'data-latitude': @property['lat'], 'data-longitude': @property['long'], 'data-pointType': @property['pointType']  }
  #property-panoramic

.buttons-container.mobile.button-toggles
  %button.primary.big.show-location{ class: "style-#{SITE_CONFIG['buttons_style']}" }
    = fa_icon 'map-marker'
    Ver ubicación
  - if SITE_CONFIG['display_street_view']
    %button.primary.big.show-3d{ class: "style-#{SITE_CONFIG['buttons_style']}" }
      = fa_icon 'map-marker'
      Ver calle 3D
  %button.primary.big.show-images.hidden{ class: "style-#{SITE_CONFIG['buttons_style']}" }
    = fa_icon 'camera'
    Ver fotos
/ End Product Carousel
